            <email>rubensilva945@gmail.com</email>
            <organization>RubenSilva</organization>
            <organizationUrl>https://rubensilva.dev</organizationUrl>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:https://github.com/rubenandre/FileChooserCli.git</connection>
        <developerConnection>scm:git:ssh://github.com/rubenandre/FileChooserCli.git</developerConnection>
        <url>https://github.com/rubenandre/FileChooserCli/</url>
    </scm>
</project>